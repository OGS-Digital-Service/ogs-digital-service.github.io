<section> 
<h1 class="text-2xl text-center my-4">{{params.heading}}</h1>
<div class="grid grid-cols-1 md:grid-cols-3">
{% for card in params.cards %}
<article class="border-4 {% if card.status == 'ready' %} border-green-600 {% elif card.status == 'in review' %} border-blue-600
{%else%}border-yellow-600{%endif%} rounded-xl m-3 px-4 p-2">
<h2 class="text-base bg-gray-100 border border-black rounded p-1 text-center">{{card.cardtitle}} </h2>
<ul>
<li class="my-2"><strong>Instance ID: </strong>{{card.incident}} </li>
<li class="my-2"><strong>Severity Level: </strong>{{card.severity}} </li>
</ul>
<section>
<h3 class="text-base font-bold">Stories: </h3>
<div class="flex flex-col justify-center">
{% if card.govstory.complete == true %}

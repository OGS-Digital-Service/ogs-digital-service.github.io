<section>
<h2 class="text-center mt-16">{{params.frametitle}}</h2>
<div class="flex flex-col md:flex-row items-center md:justify-evenly">
{% for card in params.cards %}
<article class="w-full md:w-1/3 m-4 border-solid rounded-xl border-black border focus:shadow-xl hover:shadow-xl">
  <h3 class="text-xl font-bold py-4 px-4 m-0 border-b border-gray-700 "><a href="{{ card.link }}" class="hover:underline hover:text-gray-700"> {{ card.title }}</a></h3>
  <p class="p-4 h-48">{{ card.content }}</p>
  <a href="{{ card.link }}" class="py-2 px-4 text-white font-bold bg-admin-first block hover:text-black hover:bg-admin-third hover:underline text-center rounded-b-xl" aria-label="{{card.arialabel}}"> {{ card.linktext }} </a>
</article>
{% endfor %}
</div>
</section>